<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.canvas.client">
	<ui:style src="Workspace.css" />
	<g:HTMLPanel styleName="{style.container}">
		<div class="{style.editor} hero-unit">
			<g:TextArea ui:field="textArea" styleName="{style.text}" />
			<g:Button ui:field="button" styleName="btn success"/>
		</div>
		<div class="row">
			<c:Canvas ui:field="canvas" styleName="{style.canvas} span10 offset5" coordinateSpaceHeight="800" coordinateSpaceWidth="800" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 